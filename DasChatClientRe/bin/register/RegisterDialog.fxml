<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import components.ExtendedPasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Gebe einen Accountname, einen Anzeigename(sichtbarer Name, jederzeit änderbar) und ein Passwort ein." />
      <Label text="Dein Passwort muss mindestens eine Zahl und ein Symbol enthalten, sowie aus mindestens 10 Zeichen bestehen." wrapText="true">
         <padding>
            <Insets top="3.0" />
         </padding>
      </Label>
      <Label text="Accountname">
         <padding>
            <Insets top="15.0" />
         </padding>
      </Label>
      <TextField fx:id="registerAccountname">
         <VBox.margin>
            <Insets top="1.0" />
         </VBox.margin>
      </TextField>
      <Label text="Anzeigename">
         <padding>
            <Insets top="5.0" />
         </padding>
      </Label>
      <TextField fx:id="registerScreenname" />
      <Label text="Passwort">
         <padding>
            <Insets top="15.0" />
         </padding>
      </Label>
      <ExtendedPasswordField fx:id="registerPassword">
         <VBox.margin>
            <Insets top="1.0" />
         </VBox.margin>
      </ExtendedPasswordField>
      <Label text="Passwort wiederholen">
         <padding>
            <Insets top="3.0" />
         </padding>
      </Label>
      <ExtendedPasswordField fx:id="registerPasswordAgain">
         <VBox.margin>
            <Insets top="1.0" />
         </VBox.margin>
      </ExtendedPasswordField>
      <ButtonBar>
        <buttons>
          <Button mnemonicParsing="false" onAction="#submitRegister" text="Registrieren" />
            <Button mnemonicParsing="false" onAction="#backToLogin" text="Zurück" />
        </buttons>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
