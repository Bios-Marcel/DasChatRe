<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Gib den Server an mit dem du dich verbinden möchtest (Beispiel: localhost:7777)." />
      <ComboBox fx:id="chooseServerComboBox" editable="true" maxWidth="1.7976931348623157E308" promptText="Gib eine Server Addresse an ...">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </ComboBox>
      <ButtonBar>
        <buttons>
          <Button mnemonicParsing="false" onAction="#connectToServer" text="Verbinden" />
            <Button mnemonicParsing="false" onAction="#exitDasChat" text="Schließen" />
        </buttons>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
