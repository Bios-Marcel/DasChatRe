<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.SeparatorMenuItem?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="DasChat">
            <items>
              <MenuItem mnemonicParsing="false" text="Abmelden" />
              <SeparatorMenuItem/>
              <MenuItem mnemonicParsing="false" text="Schließen" />         
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Hilfe">
            <items>
              <MenuItem mnemonicParsing="false" text="Über DasChat" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <children>
            <VBox maxHeight="1.7976931348623157E308" minWidth="250.0">
               <children>
                  <TextField />
                  <VBox maxHeight="1.7976931348623157E308" minHeight="400.0" styleClass="chatList" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
		    	<children>
		      		<WebView minHeight="-1.0" minWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="SOMETIMES" />
                  <HBox>
                     <children>
      		      		<TextArea fx:id="messageTextArea" maxHeight="120.0" maxWidth="1.7976931348623157E308" onKeyReleased="#messageTextAreaKeyListener" wrapText="true" HBox.hgrow="ALWAYS">
                           <padding>
                              <Insets bottom="3.0" left="5.0" right="5.0" top="3.0" />
                           </padding></TextArea>
                     </children>
                  </HBox>
			   </children>
			</VBox>
         </children>
      </HBox>
   </children>
</VBox>
